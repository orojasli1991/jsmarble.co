@model  JSMarbleProject.Models.FormContact
<!DOCTYPE html>
<html>
<body>    
        <!-- Section -->
        <section class="md-section" id="4" style="background-color:#fff;padding:60px 0 0;">
            <div class="row">
                <div class="col-lg-8 col-xs-offset-0 col-sm-offset-0 col-md-offset-0 col-lg-offset-2 ">

                    <!-- sec-title -->
                    <div class="sec-title sec-title__lg-title md-text-center">
                        <h2 class="sec-title__title">Contact us</h2><span class="sec-title__divider"></span>
                    </div><!-- End / sec-title -->

                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-lg-9  col-lg-push-3">
                        <div class="main-content">
                            <div class="row">
                                <div class="col-lg-6 ">
                                    <form class="contact-form" method="post" action="Index" >
                                        <!-- form-item -->
                                        <div class="form-item">
                                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Name" })
                                        </div><!-- End / form-item -->
                                        <!-- form-item -->
                                        <div class="form-item">
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                                        </div><!-- End / form-item -->
                                        <!-- form-item -->
                                        <div class="form-item">
                                            @Html.TextBoxFor(m => m.phone, new { @class = "form-control", placeholder = "Phone" })
                                        </div><!-- End / form-item -->
                                        <!-- form-item -->
                                        <div class="form-item">
                                            @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", placeholder = "Subject"})
                                        </div><!-- End / form-item -->
                                        <!-- form-item -->
                                        <div class="form-item">
                                            @Html.TextAreaFor(m => m.Message, new { @class = "form-control", placeholder = "Message" })
                                        </div><!-- End / form-item -->
                                    <button class="btn btn-primary btn-round mb-30" data-toggle="modal" data-target="#FormSend" type="submit">Send message</button>
                                </form>
                            </div>
                            <div class="col-lg-6 ">
                                <div class="contact-gmap"><iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2924.7365307482323!2d-88.73903848508338!3d42.85729607915664!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8805de278f643dfb%3A0xd442e590ac3dc334!2sCo+Rd+U%2C+Whitewater%2C+WI+53190%2C+EE.+UU.!5e0!3m2!1ses!2sco!4v1539406190258" width="100%" height="500" frameborder="0" style="border:0" allowfullscreen></iframe></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3  col-lg-pull-9">
                    <div class="sidebar">

                        <!-- widget -->
                        <section class="widget">

                            <!-- sec-title -->
                            <div class="sec-title">
                                <h2 class="sec-title__title">PLEASE, LEAVE US A MESSAGE</h2><span class="sec-title__divider"></span>
                            </div><!-- End / sec-title -->

                            <p class="mb-30">Is very important for us to stay connected with our customers. Thus we have created this section for you to send us any questions and comments. Complete the following fields and send us a message, we will reply you shortly</p>

                            <!--  -->
                            <div>
                                <div class="widget-contact__item">
                                    <span class="widget-contact__title">Tel:</span>
                                    <p class="widget-contact__text">1(920) 222-3046</p>
                                    <div>
                                        <p class="widget-contact__text">1(920) 222-1821</p>
                                    </div>
                                </div>
                                <div class="widget-contact__item">
                                    <span class="widget-contact__title">email:</span>
                                    <p class="widget-contact__text"><a href="mailto:commercial@jsmarble.co">commercial@jsmarble.co</a></p>
                                </div>
                                <div class="widget-contact__item">
                                    <span class="widget-contact__title">Working Hours</span>
                                    <p class="widget-contact__text">Mon - Sat: 9:00 - 18:00</p>
                                </div>
                            </div><!-- End /   -->

                        </section><!-- End / widget -->

                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End / Section -->
</body>
</html>